{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="float-end">
        <button type="button" data-bs-toggle="tooltip" title="{{ button_filter }}" onclick="$('#filter-inquiry').toggleClass('d-none');" class="btn btn-light d-lg-none"><i class="fas fa-filter"></i></button>
      </div>
      <h1>{{ heading_title }}</h1>
    </div>
  </div>
  <div class="container-fluid">
    <div class="row">
      <div id="filter-inquiry" class="col-lg-3 col-md-12 order-lg-last d-none d-lg-block mb-3">
        <div class="card">
          <div class="card-header"><i class="fa fa-filter"></i> {{ text_filter }}</div>
          <div class="card-body">

            <div class="mb-3">
              <label class="form-label" for="input-inquiry-id">{{ entry_inquiry_id }}</label>
              <input type="text" name="filter_inquiry_id " value="{{ filter_inquiry_id }}" placeholder="{{ entry_inquiry_id }}" id="input-inquiry-id" class="form-control" />
            </div>

            <div class="mb-3">
              <label for="input-product" class="form-label">{{ entry_product }}</label>
              <input type="text" name="filter_product" value="{{ filter_product }}" placeholder="{{ entry_product }}" id="input-product" list="list-product" class="form-control"/>
              <datalist id="list-product"></datalist>
              <input type="hidden" name="filter_product_id" id="input-filter_product_id" value="{{ filter_productvalue }}" />
            </div>
        
            <div class="mb-3">
              <label for="input-enqname" class="form-label">{{ entry_name }}</label>
              <input type="text" name="filter_enqname" value="{{ filter_enqname }}" placeholder="{{ entry_name }}" id="input-enqname" list="list-enqname" class="form-control"/>
              <datalist id="list-enqname"></datalist>
              <input type="hidden" name="inquiry_id" value="{{ filter_enqname }}" />
            </div>

            <div class="mb-4">
              <label class="form-label" for="input-customername">{{ entry_customer }}</label>
              <input type="text" name="filter_customer" value="{{ filter_customer }}" placeholder="{{ entry_customer }}" id="input-customername" list="list-customername" class="form-control" />
              <datalist id="list-customername"></datalist>
            </div>

            <div class="mb-3">
              <label for="input-date-added" class="form-label">{{ entry_date_added }}</label>
              <div class="input-group">
                <input type="text" name="filter_date_added" value="{{ filter_date_added }}" placeholder="{{ entry_date_added }}" id="input-date-added" class="form-control date"/>
                <div class="input-group-text"><i class="fas fa-calendar"></i></div>
              </div>
            </div>

            <div class="text-end">
                <button type="button" id="button-filter" class="btn btn-light col-sm-4"><i class="fas fa-filter"></i> {{ button_filter }}</button>
                <a  href="{{ reset }}" id="button-filter" class="btn btn-danger float-right col-sm-4" title="{{ text_filter }}"><i class="fa fa-refresh"></i> {{ text_reset }}</a>
            </div>

          </div>
        </div>
      </div>
      <div class="col-lg-9 col-md-12">
        <div class="card">
          <div class="card-header"><i class="fa fa-list"></i> {{ text_list }}</div>
          <div id="inquiry" class="card-body">{{ list }}</div>
        </div>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript"><!--
$('#inquiry').on('click', 'thead a, .pagination a', function (e) {
    e.preventDefault();

    $('#inquiry').load(this.href);
});

$('#button-filter').on('click', function() {
  
  var url = ''; 

  var filter_inquiry_id = $('#input-inquiry-id').val();

  if (filter_inquiry_id) {
    url += '&filter_inquiry_id=' + encodeURIComponent(filter_inquiry_id);
  }
  
  var filter_product_id = $('#input-filter_product_id').val();
  
  if (filter_product_id) {
    url += '&filter_product_id=' + encodeURIComponent(filter_product_id);
  }

   var filter_product = $('#input-product').val();
  
  if (filter_product) {
    url += '&filter_product=' + encodeURIComponent(filter_product);
  }

  var filter_customer = $('input[name=\'filter_customer\']').val();
  
  if (filter_customer) {
    url += '&filter_customer=' + encodeURIComponent(filter_customer);
  }

  var filter_enqname = $('#input-enqname').val();
  
  if (filter_enqname) {
    url += '&filter_enqname=' + encodeURIComponent(filter_enqname);
  }

  var filter_date_added = $('#input-date-added').val();

  if (filter_date_added) {
      url += '&filter_date_added=' + encodeURIComponent(filter_date_added);
  }
    
  $('#inquiry').load('index.php?route=extension/tmdvendorcustomercommunication/vendor/message|list&language={{ language }}' + '&customer_token={{ customer_token }}' + url);

});
//--></script> 

<script type="text/javascript"><!--

 $('#input-product').autocomplete({
    'source': function (request, response) {
        $.ajax({
            url: 'index.php?route=extension/tmdmultivendor/vendor/product|autocomplete&filter_name=' +  encodeURIComponent(request),
            dataType: 'json',
            success: function (json) {
                response($.map(json, function (item) {
                    return {
                        label: item['name'],
                        value: item['product_id']
                    }
                }));
            }
        });
    },
    'select': function (item) {
      $('input[name=\'filter_product\']').val(item['label']);
