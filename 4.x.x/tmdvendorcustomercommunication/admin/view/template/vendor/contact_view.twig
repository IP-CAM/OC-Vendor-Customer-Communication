{{ header }}{{ column_left }}
<div id="content">
	<div class="page-header">
		<div class="container-fluid">
			<h1>{{ heading_view }}</h1>
			<ul class="breadcrumb">
				{% for breadcrumb in breadcrumbs %}
				<li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
				{% endfor %}
			</ul>
		</div>
	</div>
    <div class="container-fluid">
        {% if error_warning %}
        <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
          <button type="button" class="close" data-dismiss="alert">&times;</button>
        </div>
        {% endif %}
        {% if success %}
        <div class="alert alert-success"><i class="fa fa-check-circle"></i> {{ success }}
          <button type="button" class="close" data-dismiss="alert">&times;</button>
        </div>
        {% endif %}
        <div class="success_msg"></div>
        <div class="panel panel-default">
			<div class="panel-heading">
				<h3 class="panel-title"><i class="fa fa-list"></i> {{ text_view }}</h3>
			</div>
			<div class="panel-body messagelist content msgsendform">
				<div class="box1">{{ description }}</div>
				<div style="overflow-x:hidden; max-height: 450px;">
					<div class="box2">
						<div class="comment-part box2">

							<ul class="comment-section list">
								{% for result in tmdmessages %}
								{% if result.customer_id %}
								<li class="comment user-comment">
									<div class="info">
									</div>
									<p class="message" style="border-radius: 30px; margin-bottom: -17px;">
									  <i class="fa fa-user"></i> <b>{{ result.message }} <span class="pull-right">{{ result.data_added }}</span></b>
									  {% if result.filename %}
									  <br/>
									  <a href="{{ result.hreflink }}"><strong>{{ text_download }}</strong> </a>
									  {% endif %}
									</p>
								</li>
								{% else %}
								<li class="comment author-comment">
									<div class="info">
									</div>
									<p class="message pull-right" style="border-radius: 30px; margin-bottom: -17px;">
									  <b>{{ result.data_added }} <span class="pull-right">{{ result.message }} <i class="fa fa-users"></i>
									  {% if result.filename %}
									  <br/>
									  <a href="{{ result.hreflink }}"><strong>{{ text_download }}</strong> </a>
									  {% endif %}
									  </span></b>
									</p>
								</li>
								{% endif %}
								{% endfor %}
							</ul>
						</div>
					</div>
				</div>
			</div>
		</div>
    </div>

<link rel="stylesheet" type="text/css" href="view/stylesheet/tmdmsg.css">

</div>

{{ footer }}