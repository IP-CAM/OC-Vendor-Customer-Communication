{{ header }}{{ column_left }}
<div id="content">
	<div class="page-header">
		<div class="container-fluid">
			<div class="float-end">
				<a href="{{ invoice }}" target="_blank" data-bs-toggle="tooltip" title="{{ button_invoice_print }}" class="btn btn-info"><i class="fa fa-print"></i></a>
			</div>
			<h1>{{ heading_view }}</h1>
			<ol class="breadcrumb">
				{% for breadcrumb in breadcrumbs %}
				<li class="breadcrumb-item"><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
				{% endfor %}
			</ol>
		</div>
	</div>
	<div class="container-fluid">
		<div class="row">
			<div class="card">
				<div class="card-header"><i class="fas fa-filter"></i> {{ text_view }}(#{{ order_id }})</div>
				<div class="card-body">
					  
					<form action="" method="post" enctype="multipart/form-data" id="form-information">
						<div class="table-responsive overflow-x-auto text-nowrap">
							<table class="table table-bordered table-hover">
								<thead>
									<tr>
										<td class="text-start" colspan="2">{{ text_details }}</td>
									 </tr>
								</thead>
								<tbody>
									<tr>
										<td class="text-start"><b>{{ text_order }}</b>: #{{ order_id }}</td>
										<td class="text-start"><b>{{ text_Payment }}</b>: {{ payment_method }}</td>
									</tr>
									<tr>
										<td class="text-start"><b>{{ text_date }}</b>: {{ date_added }}</td>
										<td class="text-start"><b>{{ text_shipping }}</b>: {{ shipping_method }}</td>
									</tr>
								</tbody>
							</table>
							<div class="table-responsive overflow-x-auto text-nowrap">
							<table class="table table-bordered">
								<thead>
									<tr>
										<td style="width: 50%;" class="text-start">{{ text_payment_address }}</td>
										{% if shipping_method %}
										<td style="width: 50%;" class="text-start">{{ text_shipping_address }}
										{% endif %}</td>
									</tr>
								</thead>
								<tbody>
									<tr>
										<td class="text-start">{{ payment_address }}</td>
										{% if shipping_method %}
										<td class="text-start">{{ shipping_address }}</td>
										{% endif %}
									</tr>
								</tbody>
							</table>
							</div>
							<br/>
							<br/>
							<div class="clearfix">
							<div class="table-responsive overflow-x-auto text-nowrap">
							<table class="table table-bordered table-hover">
								<thead>
									<tr>
										<td class="text-start">{{ column_product }}</td>
										<td class="text-start">{{ column_model }}</td>
										<td class="text-center">{{ column_quantity }}</td>
										
										<td class="text-center {{ trackingcode }}">{{ column_tracking }}</td>
										{% if chkshipcost==1 %}
										<td class="text-center">{{ column_shipingamount }}</td>
										{% endif %}
										<td class="text-center">{{ column_price }}</td>
										<td class="text-center">{{ column_total }}</td>
									</tr>
								</thead>
								<tbody>
									{% for product in products %}
									<tr>
									   <td class="text-start"><a href="{{ product.href }}">{{ product.name }}</a>
										{% if product.sellername %} {{ text_byseller }}{% endif %}
										
										<a href="{{ product.sellerhref }}">{{ product.sellername }}</a>
										{% for option in product.option %} <br />
										  {% if option.type != 'file' %}
										  &nbsp;<small> - {{ option.name }}: {{ option.value }}</small> {% else %}
										  &nbsp;<small> - {{ option.name }}: <a href="{{ option.href }}">{{ option.value }}</a></small> {% endif %}
										{% endfor %}
										</td>
										<td class="text-start">{{ product.model }}</td>
										<td class="text-center">{{ product.quantity }}</td>
									   
										<td class="text-center {{ trackingcode }}">
											<span class="track">{{ product.tracking }}</span>
										</td>
										{% if chkshipcost==1 %}
										<td class="text-center">{{ product.tmdshippingcost }}</td>
										{% endif %}
										<td class="text-center">{{ product.price }}</td>
										<td class="text-center">{{ product.total }}</td>
									</tr>
									{% endfor %}
								</tbody>
							</table>
							</div>
							<div class="card">
								<div class="card-header">
									<h3 class="card-title"><i class="fa fa-comment-o"></i> {{ text_history }}</h3>
								</div>
								
								<div class="table-responsive overflow-x-auto text-nowrap">
									<table class="table table-bordered table-hover">
										<thead>
											<tr>
												<td class="text-start">{{ column_date }}</td>
												<td class="text-start">{{ column_status }}</td>
												<td class="text-start">{{ column_productname }}</td>	
												<td class="text-start">{{ column_updatedstatus }}</td>	
												<td class="text-start">{{ column_comment }}</td>	
											</tr>
										</thead>
										<tbody>
										  {% if histories %}
										  {% for history in histories %}
										  <tr>
											<td class="text-start">{{ history.date_added }}</td>				        
											<td class="text-start">{{ history.status }}</td>	
											<td class="text-start">{{ history.productname }}</td>
											<td class="text-start">{{ history.updatedstatus }}</td>
											<td class="text-start">{{ history.comment }}</td>
										  </tr>
										  {% endfor %}
										  {% else %}
										  <tr>
												<td class="text-center" colspan="5">{{ text_no_results }}</td>
										  </tr>
										  {% endif %}
										</tbody>
									</table>			
								</div>			
							</div>			
						</div>				
						<div class="row">
						  <div class="col-sm-6 text-start">{{ pagination }}</div>
						  <div class="col-sm-6 text-end">{{ results }}</div>
						</div>		
					</form>
				  </div>
				</div>
			</div>
		</div>
	</div>
</div>

